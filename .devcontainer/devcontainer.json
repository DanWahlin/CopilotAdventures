{
    "name": "CopilotChallenge",
    "service": "app",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "forwardPorts": [],
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {
            "version": "latest"
        }
    },
    // Configure tool-specific properties.
    "customizations": {
        "vscode": {
            "extensions": [
                "github.copilot",
                "gitHub.copilot-chat",
                "gitHub.vscode-pull-request-github"
            ]
        }
    },
    "postCreateCommand": "",
    "hostRequirements": {
        "cpus": 4,
        "memory": "8gb",
        "storage": "32gb"
    }
}